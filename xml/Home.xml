<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">100</defaultcontrol>
    <onload>SetProperty(SkinHelper.WidgetContainer,9000)</onload>
    <controls>
        <!-- Background -->
        <include>HeroGeometricBackground</include>
        
        <!-- Header -->
        <control type="group">
            <left>60</left>
            <top>40</top>
            <control type="label">
                <width>1800</width>
                <height>60</height>
                <font>font30</font>
                <textcolor>text_main</textcolor>
                <label>Welcome</label>
            </control>
            <control type="label">
                <top>70</top>
                <width>1800</width>
                <height>30</height>
                <font>font14</font>
                <textcolor>text_alt</textcolor>
                <label>$INFO[System.Date]</label>
            </control>
        </control>
        
        <!-- Main Content -->
        <control type="group">
            <left>60</left>
            <top>160</top>
            <width>1800</width>
            <height>780</height>
            
            <!-- Continue Watching Section -->
            <control type="group">
                <control type="label">
                    <width>1800</width>
                    <height>40</height>
                    <font>font16</font>
                    <textcolor>text_main</textcolor>
                    <label>Continue Watching</label>
                </control>
                <control type="panel" id="9000">
                    <top>50</top>
                    <width>1800</width>
                    <height>240</height>
                    <orientation>horizontal</orientation>
                    <scrolltime tween="cubic" easing="out">300</scrolltime>
                    <itemlayout width="320" height="240">
                        <include>ContentCard</include>
                    </itemlayout>
                    <focusedlayout width="320" height="240">
                        <control type="group">
                            <animation effect="zoom" start="100" end="105" time="200" tween="cubic" easing="out" center="auto">Focus</animation>
                            <include>ContentCard</include>
                        </control>
                    </focusedlayout>
                    <content target="videos">special://skin/playlists/recentlyadded.xsp</content>
                </control>
            </control>
            
            <!-- Recommended Section -->
            <control type="group">
                <top>310</top>
                <control type="label">
                    <width>1800</width>
                    <height>40</height>
                    <font>font16</font>
                    <textcolor>text_main</textcolor>
                    <label>Recommended for You</label>
                </control>
                <control type="panel" id="9001">
                    <top>50</top>
                    <width>1800</width>
                    <height>240</height>
                    <orientation>horizontal</orientation>
                    <scrolltime tween="cubic" easing="out">300</scrolltime>
                    <itemlayout width="320" height="240">
                        <include>ContentCard</include>
                    </itemlayout>
                    <focusedlayout width="320" height="240">
                        <control type="group">
                            <animation effect="zoom" start="100" end="105" time="200" tween="cubic" easing="out" center="auto">Focus</animation>
                            <include>ContentCard</include>
                        </control>
                    </focusedlayout>
                    <content target="videos">special://skin/playlists/recommended.xsp</content>
                </control>
            </control>
        </control>
        
        <!-- Navigation Bar -->
        <include>ModernNavBar</include>
    </controls>
</window>
