<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <views>50,51,52</views>
    <controls>
        <!-- Background -->
        <include>HeroGeometricBackground</include>
        
        <!-- Header -->
        <control type="group">
            <left>60</left>
            <top>40</top>
            <control type="label">
                <width>1800</width>
                <height>60</height>
                <font>font30</font>
                <textcolor>text_main</textcolor>
                <label>$LOCALIZE[3]</label> <!-- "Videos" -->
            </control>
            <control type="label">
                <top>70</top>
                <width>1800</width>
                <height>30</height>
                <font>font14</font>
                <textcolor>text_alt</textcolor>
                <label>$INFO[Container.NumItems] $LOCALIZE[127]</label> <!-- "items" -->
            </control>
        </control>
        
        <!-- Main Content - Grid View -->
        <control type="panel" id="50">
            <left>60</left>
            <top>160</top>
            <width>1800</width>
            <height>780</height>
            <orientation>vertical</orientation>
            <scrolltime tween="cubic" easing="out">300</scrolltime>
            <pagecontrol>60</pagecontrol>
            <itemlayout width="320" height="240">
                <include>ContentCard</include>
            </itemlayout>
            <focusedlayout width="320" height="240">
                <control type="group">
                    <animation effect="zoom" start="100" end="105" time="200" tween="cubic" easing="out" center="auto">Focus</animation>
                    <include>ContentCard</include>
                </control>
            </focusedlayout>
        </control>
        
        <!-- Scrollbar -->
        <control type="scrollbar" id="60">
            <right>20</right>
            <top>160</top>
            <width>12</width>
            <height>780</height>
            <orientation>vertical</orientation>
            <texturesliderbackground colordiffuse="20FFFFFF">scrollbar/scrollbar-bg.png</texturesliderbackground>
            <texturesliderbar colordiffuse="80FFFFFF">scrollbar/scrollbar-bar.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="accent">scrollbar/scrollbar-bar.png</texturesliderbarfocus>
            <showonepage>false</showonepage>
        </control>
        
        <!-- Navigation Bar -->
        <include>ModernNavBar</include>
    </controls>
</window>
